{# File: templates/_includes/layouts/base.njk #}
<!DOCTYPE html>
<html lang="ca"> {# Language attribute remains 'ca' for Catalan content #}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {# The title will use the page title, then metadata.title, or a default in Catalan #}
    <title>{{ title or metadata.title or "El Meu Blog Automatitzat" }}</title>

    {# Construct the CSS path manually using eleventy.pathPrefix #}
    {# This assumes 'assets' is at the root of your output directory before prefixing #}
    <link rel="stylesheet" href="{{ eleventy.pathPrefix }}/assets/css/style.css">

    {# Placeholder for additional head elements from child templates (Like OG tags or AdSense head script) #}
    {% block head_extra %}{% endblock %}
</head>
<body>
    <header>
        <nav>
            {# Construct the Home link path manually #}
            <a href="{{ eleventy.pathPrefix }}/">Inici</a> {# User-facing text "Inici" (Home) remains Catalan #}
        </nav>
        <h1>{{ metadata.title or "El Meu Blog Automatitzat" }}</h1> {# Uses metadata.title or a translated default #}
        <p>{{ metadata.description or "Benvingut/da al meu fantàstic blog!" }}</p> {# Uses metadata.description or a translated default #}
    </header>

    <main>
        {{ content | safe }}
    </main>

    <footer>
        <p>&copy; {% year %} {{ metadata.author.name or "El Teu Nom Aquí" }}. Tots els drets reservats.</p> {# User-facing text remains Catalan #}
    </footer>

    {# Placeholder for any scripts at the end of the body #}
    {% block scripts %}{% endblock %}
</body>
</html>
